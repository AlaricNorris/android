<?xml version="1.0" encoding="utf-8"?>
<!-- 未登陆状态下的 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <!-- 头部导航 -->

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/bg_actionbar"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="50dip"
	        android:background="@drawable/bg_actionbar"
	        android:orientation="horizontal"
	        android:gravity="center_vertical"
	        android:layout_weight="0">
	        <ImageView android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:layout_marginLeft="5dip"
	              android:src="@drawable/abs__ic_ab_back_holo_dark"/>
	         <TextView 
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:textSize="18sp"
	             android:layout_marginLeft="4dip"
	             android:textColor="@android:color/white"
	            android:text="学籍信息"/>
	         <RelativeLayout android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:gravity="center_vertical"
	             >
	              <ImageView android:id="@+id/ib_mines"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:background="@drawable/widget_line"
	             android:layout_alignParentRight="true"
	            android:layout_marginRight="70dip"
	             />
	             <LinearLayout android:layout_width="70dip"
	                 android:layout_height="50dip"
	                android:gravity="center" 
	                android:layout_alignParentRight="true">
	                   <TextView android:layout_width="wrap_content"
	                  android:layout_height="wrap_content"
	                  android:textColor="@color/white"
	                  android:text="    "
	                  />
	             </LinearLayout>
	            
	         </RelativeLayout>
	    </LinearLayout>
    </RelativeLayout>

    <!-- 未登陆状态下 -->

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_top"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_login"
                android:gravity="center"
                android:orientation="horizontal" >
				<TextView   
				    android:id="@+id/name"
                    android:layout_width="wrap_content"  
                    android:layout_height="wrap_content"  
                    android:textColor="#000000"  
                    android:layout_marginLeft="15dip"  
                     android:textSize="20sp"  
                    android:text="陈小波"/>  
                <TextView   
                    android:id="@+id/number" 
                    android:layout_width="wrap_content"  
                    android:layout_height="wrap_content"  
                    android:layout_marginLeft="25dip"  
                    android:text="1402120978"  
                    android:textColor="#000000"  
                   	android:textSize="20sp" />  
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@color/abs__bright_foreground_disabled_holo_light"
                android:orientation="horizontal" />
            <!-- 其他 -->
			 <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="70dip"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="70dip"
                    android:layout_weight="1"
                    android:background="@color/abs__bright_foreground_holo_dark"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >
					<TextView
					    android:id="@+id/colleage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="院系：电院" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="1dip"
                    android:layout_height="70dip"
                    android:layout_weight="0"
                    android:background="@color/bg_gray"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="70dip"
                    android:layout_weight="1"
                    android:background="@color/abs__bright_foreground_holo_dark"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="专业：信号与信息处理" />

                </LinearLayout>
            </LinearLayout>
			
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/abs__bright_foreground_holo_dark"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="2dip"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="5dip"
                        android:background="@color/gray_light" />
                    
                    <LinearLayout
                        android:id="@+id/ll_everyday_recommend"
                        android:layout_width="fill_parent"
                        android:layout_height="60dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >
                        <ImageView
                            android:id="@+id/iv_recommend_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="100dip"
                            android:src="@drawable/ic_order_account_recommend_normal" />
                        <TextView
                            android:id="@+id/teacher"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:text="导师:姬红兵教授" />
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="5dip"
                        android:background="@drawable/bottom_divider" />
                </LinearLayout>

                <!-- 订单 -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="成绩" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="2dip"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="5dip"
                        android:layout_marginTop="5dip"
                        android:background="@color/black2" />

                    <LinearLayout
                        android:id="@+id/ll_order_first"
                        android:layout_width="fill_parent"
                        android:layout_height="60dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/iv_order_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:enabled="false"
                            android:src="@drawable/ic_order_unpaid_disabled" />

                        <TextView
                            android:id="@+id/requirePoint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:enabled="false"
                            android:text="额定学分： 30.0" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/completePoint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dip"
                                android:enabled="false"
                                android:text="已完成：2.5" />
                        </RelativeLayout>
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:enabled="false"
                            android:src="@drawable/ic_order_unpaid_disabled" />

                        <TextView
                            android:id="@+id/requireDegreePoint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:enabled="false"
                            android:text="学位课额定学分：19.0" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/completeDegreePoint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dip"
                                android:enabled="false"
                                android:text="已完成：2.0" />
                        </RelativeLayout>
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:enabled="false"
                           android:src="@drawable/ic_voucher_disabled"  />

                        <TextView
                            android:id="@+id/gpa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:enabled="false"
                            android:text="学位课加权平均分：0.0" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="5dip"
                        android:layout_marginTop="5dip"
                        android:background="@color/black2" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="5dip"
                        android:layout_marginTop="5dip"
                        android:background="@drawable/bottom_divider" />

                    </LinearLayout>
                </LinearLayout>
				 <LinearLayout android:layout_width="fill_parent"
		            android:layout_height="40dip"
		            android:layout_marginTop="10dip"
		            android:gravity="center">
			        <Button android:id="@+id/btn_cancel_login"
			            android:layout_width="fill_parent"
			            android:layout_height="40dip"	           
			            android:layout_marginLeft="15dip"
			            android:layout_marginRight="15dip"	            
			            android:background="@drawable/iscancelloginbutton"
			            android:text="退出帐号"
			            android:textColor="@color/white"
			            android:clickable="true"/>
	         	</LinearLayout>
            </LinearLayout>
    </ScrollView>

    <!-- 底部tab部分 -->

</RelativeLayout>