<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:paddingTop="30dip"
    android:paddingBottom="30dip"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:id="@+id/weather_rootLayout">
    
    <!-- android:background="@drawable/widget_bg" -->

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="108dip"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/widget_icon"
            android:layout_width="108dip"
            android:layout_height="108dip"
            android:src="@drawable/widget_temp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:textColor="@color/white"
                    android:id="@+id/widget_data01"
                    android:textSize="15dip"
                    android:text="2011-12-7 星期三"/>"
                <TextView
                    android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:gravity="right"
                    android:id="@+id/widget_data02"
                    android:textSize="15dip"
                    android:text="" />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:text="随机过程引论"
                    android:id="@+id/widget_time"
                    android:textSize="30dip"
                    android:shadowColor="@color/dark"
                    android:shadowRadius="3.0"
                    android:shadowDy="2.0"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/widget_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="主讲：冯海林 教授"
                    android:textColor="@color/snow"
                    android:textSize="20dip" />

		        <TextView
		            android:text="地点：J4-04"
		            android:id="@+id/widget_temp"
				    android:textColor="@color/snow"
				    android:textSize="20dip"
				    android:layout_weight="1"
				    android:gravity="center_horizontal"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
</LinearLayout>